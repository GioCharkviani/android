<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="60dp">
    tools:context=".MainActivity"

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@color/material_dynamic_primary95"
        android:orientation="vertical"
        android:paddingTop="90dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:radius="5dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_gravity="end"
            android:width="20dp"
            android:height="20dp"
            android:text="4"
            android:textAlignment="textEnd"
            android:textSize="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:backgroundTint="#b02121"
            android:text="C"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="clearDisplay" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:text="%"
            android:textColor="#ffffff"
            android:textSize="36dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:text="x"
            android:textColor="#ffffff"
            android:textSize="36dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="saveOperator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <Button
            android:id="@+id/btn5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="8"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="9"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="*"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="saveOperator" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <Button
            android:id="@+id/btn9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="5"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn11"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="6"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"/>

        <Button
            android:id="@+id/btn12"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="saveOperator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <Button
            android:id="@+id/btn13"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn14"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn15"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"/>

        <Button
            android:id="@+id/btn16"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="saveOperator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <Button
            android:id="@+id/btn17"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="00"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="32dp"
            />

        <Button
            android:id="@+id/btn18"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="0"
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"
            android:onClick="addNumToTxt"
            />

        <Button
            android:id="@+id/btn19"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text=","
            android:layout_margin="10dp"
            android:backgroundTint="#e0e0e0"
            android:textColor="#000000"
            android:textSize="36dp"/>

        <Button
            android:id="@+id/btn20"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="="
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:textSize="36dp"
            android:onClick="doneCalc"/>

    </LinearLayout>


</LinearLayout>